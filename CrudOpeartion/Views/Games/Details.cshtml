@using CrudOpeartion.Settings;
@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-success rounded-4 mt-5 overflow-hidden">
   <div class="card-body">
    <div class="row">
        <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
            <div>
                <h1 class="text-success fw-bolder">@Model.Name</h1>
                <h5 class="badge bg-info fs-5 mb-4">@Model.Category?.Name</h5>
                <p>@Model.Description</p>
            </div>
            <div>
                    @foreach (var gameDevice in Model.Devices)
                    {
                        <i class="@gameDevice.Device.Icon me-2 fs-4"></i>
                    }
           </div>
        </div>
        <div class="col-md-4">
            <img src="@($"{FileSettings.ImagePath}/{Model.Cover}")" alt="@Model.Name" style="width: 100%;" />
        </div>
    </div>
   </div>
</div>